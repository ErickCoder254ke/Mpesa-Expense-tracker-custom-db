# PesaDB Configuration
# Copy this file to .env and fill in your actual values
# ALL variables below are REQUIRED - no defaults provided

# PesaDB API Key (REQUIRED)
# Get this from your PesaDB dashboard
PESADB_API_KEY=your_pesadb_api_key_here

# PesaDB API URL (REQUIRED)
# The base URL for your PesaDB instance API
PESADB_API_URL=https://pesacoredb-backend.onrender.com/api

# Database Name (REQUIRED)
# The name of your PesaDB database
PESADB_DATABASE=mpesa_tracker

# JWT Secret Key (REQUIRED for authentication)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here

# Optional: Development Settings
# Uncomment if needed for development
# DEBUG=True
# LOG_LEVEL=INFO
